---
import YourChoiceSvg from '@assets/icons/your-choices.svg';

const repoUrl = (
  import.meta.env.PUBLIC_REPO_URL ||
  import.meta.env.REPO_URL ||
  'https://github.com/microsoft/aspire.dev'
).replace(/\/$/, '');
const commit = import.meta.env.PUBLIC_GIT_COMMIT_ID || import.meta.env.GIT_COMMIT_ID || '';
---

<section class="ms-microsoft-footer" role="contentinfo" aria-label="Microsoft footer">
  <!-- Top Row -->
  <div class="ms-footer-top-row">
    <div class="ms-footer-privacy-links">
      <a
        class="footer-text-link sl-flex"
        href="https://aka.ms/yourcaliforniaprivacychoices"
        target="_blank"
        rel="noopener noreferrer"
        ><YourChoiceSvg />
        <span>{Astro.locals.t('footer.privacyChoices')}</span>
      </a>
      <a
        class="footer-text-link"
        href="https://go.microsoft.com/fwlink/?linkid=2259814"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.consumerHealthPrivacy')}</a
      >
    </div>
    <div class="ms-footer-main-links">
      <a
        class="footer-text-link"
        href="https://support.microsoft.com/en-US/contactus/"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.contact')}</a
      >
      <a
        class="footer-text-link"
        href="https://dotnet.microsoft.com/platform/support/policy/aspire"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.support')}</a
      >
      <a
        class="footer-text-link"
        href="https://go.microsoft.com/fwlink/?LinkId=521839"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.privacyAndCookies')}</a
      >
      <a
        class="footer-text-link"
        href="https://go.microsoft.com/fwlink/?LinkID=206977"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.terms')}</a
      >
      <a
        class="footer-text-link"
        href="https://go.microsoft.com/fwlink/?linkid=2196228"
        target="_blank"
        rel="noopener noreferrer">{Astro.locals.t('footer.trademarks')}</a
      >
    </div>
  </div>

  <!-- Bottom Row -->
  <div class="ms-footer-bottom-row">
    <a
      class="footer-text-link commit-link"
      href={`${repoUrl}/commit/${commit}`}
      target="_blank"
      title={`Built on commit SHA: ${commit.slice(0, 7)}`}
      rel="noopener noreferrer">SHA — {commit.slice(0, 7)}</a
    >
    <span id="year" class="copyright">© Microsoft</span>
  </div>
</section>

<script is:inline>
  const el = document.getElementById('year');
  if (el) {
    el.textContent = `© Microsoft ${new Date().getFullYear()}`;
  }
</script>

<style>
  .ms-microsoft-footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.9rem;
    padding: 0.25rem 0;
    width: 100%;
    box-sizing: border-box;
  }

  /* Top Row - Privacy links left, main links right */
  .ms-footer-top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    width: 100%;
    gap: 0.75rem;
  }

  .ms-footer-privacy-links {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .ms-footer-main-links {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  /* Bottom Row - commit link left, copyright right */
  .ms-footer-bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin-top: 0.25rem;
  }

  /* keep icon + text spacing */
  .ms-footer-privacy-links .sl-flex {
    gap: 0.5rem;
  }

  .footer-text-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    gap: 0.5rem;
    color: var(--sl-color-gray-2);
    word-break: normal;
  }

  .footer-text-link:hover {
    color: var(--sl-color-white);
  }

  .copyright {
    display: inline-flex;
    align-items: center;
    color: var(--sl-color-gray-2);
    font-size: 0.85em;
  }

  .commit-link {
    font-size: 0.85em;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .ms-footer-top-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .ms-footer-privacy-links,
    .ms-footer-main-links {
      justify-content: flex-start;
      gap: 1rem;
    }

    .ms-footer-bottom-row {
      flex-direction: row;
      justify-content: space-between;
      margin-top: 0.5rem;
    }
  }

  /* Medium screens - keep some structure */
  @media (min-width: 640px) and (max-width: 1024px) {
    .ms-footer-main-links {
      flex-wrap: wrap;
    }
  }
</style>
