---
export interface Props {
  light: ImageMetadata;
  dark: ImageMetadata;
  alt: string;
  label?: string;
  height?: number;
  width?: number;
  classOverride?: string;
  zoomable?: boolean;
}

const {
  light,
  dark,
  alt,
  label,
  height,
  width,
  classOverride,
  zoomable = true,
} = Astro.props as Props;

import { Zoom } from 'starlight-image-zoom/components';
---

{
  zoomable ? (
    <Zoom label={label ?? alt}>
      <img
        class:list={[classOverride, 'theme-image']}
        src={dark.src}
        alt={alt}
        data-light={light.src}
        data-dark={dark.src}
        {...(height ? { height } : {})}
        {...(width ? { width } : {})}
        decoding="async"
        loading="lazy"
      />
    </Zoom>
  ) : (
    <img
      class:list={[classOverride, 'theme-image']}
      src={dark.src}
      alt={alt}
      data-light={light.src}
      data-dark={dark.src}
      {...(height ? { height } : {})}
      {...(width ? { width } : {})}
      decoding="async"
      loading="lazy"
    />
  )
}

<script>
  const html = document.documentElement;

  function updateThemeImages() {
    const theme = html.getAttribute('data-theme') ?? 'light';
    document.querySelectorAll('.theme-image').forEach((img) => {
      if (img instanceof HTMLImageElement) {
        const targetSrc = (theme === 'dark' ? img.dataset.dark : img.dataset.light) || '';
        if (targetSrc && img.src !== targetSrc) {
          img.src = targetSrc;
        }
      }
    });
  }

  // Initial set
  updateThemeImages();

  // Watch for theme toggle changes
  const observer = new MutationObserver(updateThemeImages);
  observer.observe(html, { attributes: true, attributeFilter: ['data-theme'] });
</script>

<style>
  .theme-image {
    margin-top: 0rem;
  }
</style>
